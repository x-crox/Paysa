<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up" >


    <soup.neumorphism.NeumorphCardView
        android:layout_width="205dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541">

        <EditText
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="OTP"
            android:textColorHint="@color/hint_color"
            android:inputType="textPersonName"
            android:textColor="@color/actual_green"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="427dp" />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="335dp"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.203">

        <EditText
            android:id="@+id/new_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Enter new username"
            android:textColorHint="@color/hint_color"
            android:inputType="textPersonName"
            android:textColor="@color/actual_green"

            />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="335dp"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.337">

        <EditText
            android:id="@+id/new_password"
            android:layout_width="278dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Enter new password"
            android:textColorHint="@color/hint_color"
            android:inputType="textPassword"
            android:textColor="@color/actual_green"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="315dp" />
    </soup.neumorphism.NeumorphCardView>

    <Button
        android:id="@+id/cancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/official_background_color"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:shadowColor="@color/official_background_color"
        android:text="Cancel"
        android:textColor="@color/actual_dark_green"
        android:textFontWeight="1000"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/done"
        android:layout_width="159dp"
        android:layout_height="73dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Done"
        android:textColor="@color/actual_green"
        android:textFontWeight="1000"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.775" />
</androidx.constraintlayout.widget.ConstraintLayout>