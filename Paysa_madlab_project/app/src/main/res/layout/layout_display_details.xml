<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/official_background_color"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/participant_dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="150dp"
        android:layout_marginHorizontal="50dp"
        android:foreground="@drawable/ic_baseline_account_circle_24"

        >


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/participant_id"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="@dimen/dimen_40dp"
        android:textColor="@color/actual_dark_green"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textFontWeight="500"
        />

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginBottom="50dp"
        >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/owe_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_square_off"
                />
            <TextView
                android:id="@+id/status_id"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="@dimen/dimen_20dp"
                android:textColor="@color/actual_green"
                android:layout_marginBottom="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="21dp"
                android:textFontWeight="700"
                />
        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>

</TableLayout>