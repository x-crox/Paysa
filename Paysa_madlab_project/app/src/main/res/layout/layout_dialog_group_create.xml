<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:layout_gravity="center"
    android:background="@color/official_background_color">

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:layout_margin="25dp">

        <EditText
            android:id="@+id/group_name"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="sans-serif-medium"
            android:hint="Group name"
            android:textAlignment="center"
            android:textColor="@color/actual_green"
            android:textColorHint="@color/hint_color"
            android:textFontWeight="900"
            android:textSize="20dp" />

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/add_group"
        android:layout_width="158dp"
        android:layout_height="77dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Add"
        android:textAlignment="center"
        android:textColor="@color/actual_green"
        android:textFontWeight="1000"
        android:textSize="30dp" />

    <Button
        android:id="@+id/cancel_group_pop"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/official_background_color"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:shadowColor="@color/official_background_color"
        android:text="Cancel"
        android:textColor="@color/actual_dark_green"
        android:textFontWeight="1000"
        android:textSize="15dp" />

</TableLayout>